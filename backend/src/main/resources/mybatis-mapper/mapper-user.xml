<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lx.finalproject.dao.ExampleDao">

    <!-- 조회 예시 -->
    <select id="getAllExamples" resultType="com.lx.finalproject.vo.ExampleVo">
        SELECT * FROM example
    </select>
    <!-- 사용자 정보 조회 -->
    <select id="getUserByName" resultType="com.lx.finalproject.vo.UserVo" parameterType="int">
        SELECT *
        FROM users
        WHERE id = #{id}
    </select>

    <!-- 등록 예시 -->
    <insert id="createExample" parameterType="com.lx.finalproject.vo.ExampleVo">
        INSERT INTO example (name, description) 
        VALUES (#{name}, #{description})
    </insert>
    <!-- 사용자 등록 -->
    <insert id="createUser" parameterType="com.lx.finalproject.vo.UserVo">
        INSERT INTO users (
        	user_img, user_id, user_pw, user_perm, user_name, user_ssn, 
        	user_mobile, user_email, region_pk, region_pk2
        )
	    VALUES (
	        #{userImg}, #{userId}, #{userPw}, #{userPerm}, #{userName}, #{userSsn}, 
	        #{userMobile}, #{userEmail}, #{regionPk}, #{regionPk2}
	    )
    </insert>

    <!-- 수정 -->
    <update id="updateExample" parameterType="com.lx.finalproject.vo.ExampleVo">
        UPDATE example
        SET name = #{name}, description = #{description}
        WHERE id = #{id}
    </update>

    <!-- 삭제 -->
    <delete id="deleteExample" parameterType="Long">
        DELETE FROM example WHERE id = #{id}
    </delete>

</mapper>